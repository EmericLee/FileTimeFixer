{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "File Time Fixer",
  "version": "0.0.101",
  "identifier": "com.filetimefixer",
  "build": {
    "beforeBuildCommand": "pnpm vite build",
    "beforeDevCommand": "pnpm vite",
    "devUrl": "http://192.168.100.50:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "File Time Fixer",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "shortDescription": "A tool to fix file timestamps",
    "longDescription": "File Time Fixer is a desktop application that allows you to modify and fix file timestamps with ease.",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "autoIncrementVersionCode": false,
      "minSdkVersion": 24
    }
  }
}
